    {
        new Genre(){ Id = 1, Name = "Action" },
        new Genre(){ Id = 2, Name = "Comedy" },
        new Genre(){ Id = 3, Name = "Drama" },
    };

    protected override void OnInitialized()
    {
        movie = new Movie() { Id = 1, Title = "Movie title" };
    }

    private async Task Save()
    {

    }

}
