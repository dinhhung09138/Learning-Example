@page "/movies/create"

@inject NavigationManager navManager

<MovieForm Movie="movie" OnValidSubmit="Save" NotSelectedGenres="NotSelectedGenres" />

@code {

    private Movie movie = new Movie();
    private List<Genre> NotSelectedGenres = new List<Genre>()
    {
        new Genre(){ Id = 1, Name = "Action" },
        new Genre(){ Id = 2, Name = "Comedy" },
        new Genre(){ Id = 3, Name = "Drama" },
    };

    private void Save()
    {
        Console.WriteLine("Save movie");
        Console.WriteLine(navManager.Uri);

        navManager.NavigateTo("movie");

    }

}
