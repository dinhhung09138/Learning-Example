@page "/"

<p>Hello, @name</p>
<p>Hello, @upperString(name)</p>
<p>2 + 2 = @(2 + 2)</p>
<p>2 + 2 = @Count(2, 2)</p>

<button @onclick="@(() => Console.WriteLine("Hello Hung"))">Click</button>

@code {
    string name = "Hung";

    string upperString(string value) => value.ToUpper();

    int Count(int a, int b)
    {
        return a + b;
    }
}

